<dialog id="newsletter-dialog">
  <div class="form-container">
    <button class="luk" type="button" onclick="closeNewsletter()">✖</button>
    <h2>NYHEDSBREV</h2>
    <form>
      <p>
        Skriv dig op til nyhedsbrevet og vær den første, der modtager besked om nye koncerter,
        merchandise og meget mere.
      </p>
      <div class="skærsilden">
        <input class="input" type="email" id="email" name="email" placeholder="E-MAIL" required />
        <button type="submit">TILMELD</button>
      </div>
    </form>
  </div>
</dialog>



<style>
/* ---------------- NYHEDSBREV------------- */


.skærsilden {
  display: grid;
  justify-content: center;
  gap: 20px;
}

.form-container {
  position: relative;
  align-self: center;
  background-color: rgba(0, 0, 0, 0.84);
  width: 400px;
  height: 400px;
  padding-top: 10px;
  opacity: 0;
  transform: translateY(-50px); /* Start uden for skærmen */
  transition: opacity 0.5s ease, transform 0.5s ease; /* Glidende effekt */
}

.form-container.visible {
  opacity: 1;
  transform: translateY(0);
}

h2 {
  text-align: center;
  font-size: 40px;
  color: #ffffff;
  margin-bottom: 20px;
  font-family: "Inter", serif;
  font-style: normal;
}

p {
  text-align: center;
  color: #fff;
  font-family: "Lato", sans-serif;
  font-style: normal;
}

.input {
  display: center;
  text-align: center;
  width: 100%;
  font-size: 16px;
  padding: 10px;
  box-sizing: border-box;
}

button {
  padding: 8px;
  background-color: #ef4d2e;
  color: #fff;
  border: none;
  border-radius: 100px;
  font-size: 19px;
}

button:hover {
  background-color: #ffffff;
}

dialog[open] {
  display: block;
}

.luk {
  position: absolute;
  top: 10px;
  right: 10px;
  background-color: #ef4d2e;
  color: #ffffff;
  border: none;
  border-radius: 50%;
  width: 30px;
  height: 30px;
  font-size: 18px;
  text-align: center;
  cursor: pointer;
}

.luk:hover {
  background-color: #d43f25;
}

</style>

<script>



// JavaScript til at aktivere scroll-effekten
document.addEventListener('DOMContentLoaded', () => {
  const formContainer = document.querySelector('.form-container');

  // Funktion der aktiverer animationen, når elementet kommer i synsfelt
  function handleScroll() {
    const rect = formContainer.getBoundingClientRect();
    if (rect.top < window.innerHeight && rect.bottom >= 0) {
      formContainer.classList.add('visible'); // Tilføj 'visible' for at animere
    }
  }

  // Lyt efter scroll events
  window.addEventListener('scroll', handleScroll);

  // Kør funktionen en gang ved siden af indlæsning
  handleScroll();
});



document.addEventListener('DOMContentLoaded', () => {
  const dialog = document.getElementById('newsletter-dialog');
  
  // Åbn dialogen, hvis understøttet
  if (dialog && typeof dialog.showModal === 'function') {
    dialog.showModal();
  } else {
    dialog.style.display = 'block';
  }
});

// Luk dialogen med knappen
function closeNewsletter() {
  const dialog = document.getElementById('newsletter-dialog');
  console.log("Luk-knap trykket"); // Fejlfinding
  if (dialog && typeof dialog.close === 'function') {
    dialog.close();
  } else {
    dialog.style.display = 'none';
  }
}

</script>
