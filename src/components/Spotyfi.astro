---
import Button from "../components/Button.astro";
const { title } = Astro.props;
---

<div class="container">
  <Button />

  <div class="spotify">
    <img class="img" src="/billeder/spotyfi.svg" alt="" />
    <p class="p"><br />EXPLORE ON <br /><br />SPOTYFI<br /></p>
    <img src="/billeder/Arrow.jpg" alt="pil" />
  </div>
</div>

<style>
  .img {
    width: 100px;
  }

  .spotify {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .container {
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    padding: 40px;
  }

  .p {
    color: rgba(0, 0, 0, 0.3);
    font-size: 40px;
    font-weight: bolder;
    font-family: "Inter", serif;
    line-height: 20px;
  }
</style>
