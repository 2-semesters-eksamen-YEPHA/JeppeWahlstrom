---
import Welcome from "../components/Welcome.astro";
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Button from "../components/Button.astro";
import Liveevents from "../components/Liveevents.astro";
import Spotyfi from "../components/Spotyfi.astro";
import About from "../components/About.astro";
import Instagramrulle from "../components/Instagramrulle.astro";
import Nyhedsbrev from "../components/Nyhedsbrev.astro";
---

<Layout>
  <body>
    <Header title="YEPHA" />
    <main>
      <div class="form-container">
        <h2>NYHEDSBREV</h2>
        <form action="" netlify>
          <p class="nyhedstekst">Skriv dig op til nyhedsbrevet og vær den første, der modtager besked om nye koncerter, merchandise og meget mere.</p>
          <label for="email"></label>
          <input type="email" id="email" name="email" required />
          <button type="submit">TILMELD</button>
        </form>
      </div>

      <Spotyfi />
      <Liveevents />
      <About />

      <Instagramrulle />
    </main>

    <Footer />
  </body>
</Layout>
